<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>tanka.graphql.server</AssemblyName>
    <RootNamespace>Tanka.GraphQL.Server</RootNamespace>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="GraphiQL\host.html" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="GraphiQL\host.html" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
    <PackageReference Include="System.IO.Pipelines" Version="6.0.2" />
    <PackageReference Include="System.Net.WebSockets" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\graphql.server.links\graphql.server.links.csproj" />
    <ProjectReference Include="..\graphql\graphql.csproj" />
  </ItemGroup>

</Project>
