<ProjectSchemaDefinitions xmlns="http://schemas.microsoft.com/build/2009/properties">
    <Rule Name="GraphQL"
          DisplayName="File Properties"
          PageTemplate="generic"
          Description="File Properties"
          OverrideMode="Extend">
        <Rule.DataSource>
            <DataSource Persistence="ProjectFile" Label="Configuration" ItemType="GraphQL"
                        HasConfigurationCondition="false" SourceOfDefaultValue="AfterContext" />
        </Rule.DataSource>

        <Rule.Categories>
            <Category Name="Tanka" DisplayName="Tanka" />
        </Rule.Categories>

        <EnumProperty Name="Access" DisplayName="Class Access"
                      Category="Tanka"
                      Description="Public or internal access modifier on generated classes.">
            <EnumValue Name="Public" DisplayName="Public" IsDefault="true" />
            <EnumValue Name="Internal" DisplayName="Internal" />
            <EnumProperty.DataSource>
                <DataSource ItemType="GraphQL" SourceOfDefaultValue="AfterContext"
                            PersistenceStyle="Attribute" HasConfigurationCondition="false" />
            </EnumProperty.DataSource>
        </EnumProperty>

        <EnumProperty Name="Generate" DisplayName="Generate"
                      Category="Tanka"
                      Description="Object model generated by the generator">
            <EnumValue Name="Complete" DisplayName="Complete" IsDefault="true" />
            <EnumValue Name="None" DisplayName="None" />
            <EnumProperty.DataSource>
                <DataSource ItemType="GraphQL" SourceOfDefaultValue="AfterContext"
                            PersistenceStyle="Attribute" HasConfigurationCondition="false" />
            </EnumProperty.DataSource>
        </EnumProperty>

    </Rule>
</ProjectSchemaDefinitions>